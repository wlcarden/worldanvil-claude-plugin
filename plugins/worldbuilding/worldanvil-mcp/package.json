{
  "name": "worldanvil-mcp",
  "version": "1.9.0",
  "description": "MCP server for WorldAnvil API - works with Claude Code, Cursor, Windsurf, and any MCP-compatible AI tool",
  "main": "index.js",
  "bin": {
    "worldanvil-mcp": "./index.js"
  },
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "worldanvil",
    "worldbuilding",
    "claude",
    "cursor",
    "ai",
    "rpg",
    "ttrpg",
    "writing"
  ],
  "author": "Leighton Carden",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wlcarden/worldanvil-claude-plugin.git",
    "directory": "plugins/worldbuilding/worldanvil-mcp"
  },
  "homepage": "https://github.com/wlcarden/worldanvil-claude-plugin#readme",
  "bugs": {
    "url": "https://github.com/wlcarden/worldanvil-claude-plugin/issues"
  },
  "files": [
    "index.js",
    "src/",
    "CLAUDE.md",
    "README.md"
  ],
  "dependencies": {
    "@crit-fumble/worldanvil": "^3.1.0",
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "vitest": "^4.0.16"
  }
}
